{
  "name": "typescript-boilerplate",
  "version": "0.0.1",
  "private": true,
  "main": "build/index.js",
  "type": "module",
  "author": {
    "name": "Jonathan Wheeler",
    "email": "jonathan.wheeler87@gmail.com"
  },
  "description": "A TypeScript boilerplate package.",
  "scripts": {
    "dev": "tsx watch --include \"./src/*\" src/index.ts",
    "build": "tsc -p tsconfig.json",
    "lint:ts": "eslint \"./**/*.{ts,tsx}\"",
    "lint:js": "eslint \"./**/*.js\"",
    "lint:fix": "npm-run-all \"lint:!(fix|links) -- --fix\"",
    "lint": "npm-run-all \"lint:!(fix)\"",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "engines": {
    "node": ">= 22.20.0"
  },
  "license": "MIT",
  "dependencies": {
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/node": "^24.10.1",
    "@types/semver": "^7.7.1",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "eslint": "^9",
    "jsdom": "^27.4.0",
    "nodemon": "^3.1.11",
    "npm-run-all2": "^8.0.4",
    "tslib": "^2.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5",
    "typescript-eslint": "^8.48.1",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.16"
  }
}
